	<!-- Javascript-->
	<script src="assets/js/core.min.js"></script>
	<script src="assets/js/script.js"></script>
	<script>
		$(document).ready(function () {
			var pacoteSelecionado;
			var valorDiariaSelecionada;
			var cpfCliente;

			// Quando o botão "Fazer Reserva" é clicado
			$('.btn-reserva').on('click', function () {
				pacoteSelecionado = $(this).data('pacote');
				valorDiariaSelecionada = parseFloat($(this).data('diaria'));

				// Abra o modal de informações do cliente diretamente pelo ID
				$('#clienteInfoModal').modal('show');
			});

			// Quando o botão "Seguir para Reserva" é clicado
			$('#seguirParaReserva').on('click', function () {
				// Coletar informações do cliente do formulário
				cpfCliente = $('#cpf').val();

				// Preencher as informações do cliente no modal de confirmação
				$('#cpfConfirmacao').text(cpfCliente);
				$('#pacoteConfirmacao').text(pacoteSelecionado);
				$('#valorDiariaConfirmacao').text(valorDiariaSelecionada.toFixed(2));

				// Fechar o modal de informações do cliente
				$('#clienteInfoModal').modal('hide');

				// Mostrar o modal de confirmação da reserva
				$('#confirmacaoReservaModal').modal('show');
			});

			// Quando o botão "Concluir Reserva" é clicado
			$('#concluirReserva').on('click', function () {
				var diariasReserva = parseFloat($('#diariasReserva').val());
				var totalPagar = valorDiariaSelecionada * diariasReserva;

				// Preencher o total a pagar no modal de confirmação
				$('#totalPagarConfirmacao').text(totalPagar.toFixed(2));

				// Aqui você pode implementar a lógica para enviar os dados do cliente e da reserva para o servidor
				// Por exemplo, você pode usar AJAX para enviar os dados para um arquivo PHP no servidor:
				$.ajax({
					type: 'POST',
					url: 'seu_arquivo_de_servidor.php',
					data: {
						cpf: cpfCliente,
						pacote: pacoteSelecionado,
						valorDiaria: valorDiariaSelecionada,
						diarias: diariasReserva,
						totalPagar: totalPagar
					},
					success: function (response) {
						// Aqui você pode lidar com a resposta do servidor
						if (response === 'sucesso') {
							// Exibir mensagem de sucesso
							alert('Reserva concluída com sucesso!');
						} else {
							// Exibir mensagem de erro
							alert('Erro ao processar a reserva. Tente novamente.');
						}
					},
					error: function () {
						// Tratar erros de conexão com o servidor
						alert('Erro de conexão com o servidor. Tente novamente.');
					}
				});
			});
		});
	</script>

